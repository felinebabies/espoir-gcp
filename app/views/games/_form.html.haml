= form_for @game do |f|
  - if @game.errors.any?
    #error_explanation
      %h2= "#{pluralize(@game.errors.count, "error")} prohibited this game from being saved:"
      %ul
        - @game.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :startTime
    = f.datetime_select :startTime
  .field
    = f.label :term
    = f.number_field :term
  .field
    = f.label :status
    = f.number_field :status
  .actions
    = f.submit 'Save'
